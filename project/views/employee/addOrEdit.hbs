<div class="row">
    <div class="col-md-10">
        <h3>{{viewTitle}}</h3>
    </div>
    <div class="col-md-2">
        <a class="btn btn-secondary" href="/employee"><i class="fa fa-arrow"> Go Back</i></a>
    </div>
</div>


<form action="/employee/store" method="POST">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="">
        <div class="text-danger">
            {{employee.fullNameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="email" placeholder="Email" value="">
        <div class="text-danger">
            {{employee.emailError}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="number" class="form-control" name="mobile" placeholder="Mobile" value="">
            <div class="text-danger">
                {{employee.mobileError}}
            </div>
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="">
            <div class="text-danger">
                {{employee.cityError}}
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
    </div>
    
</form>